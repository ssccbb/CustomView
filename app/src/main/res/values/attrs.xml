<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--ShimmerFrameLayout-->
    <declare-styleable name="ShimmerLayout">
        <attr name="auto_start" format="boolean"/>
        <attr name="base_alpha" format="float"/>
        <attr name="duration" format="integer"/>
        <attr name="repeat_count" format="integer"/>
        <attr name="repeat_delay" format="integer"/>
        <attr name="repeat_mode" format="enum">
            <enum name="restart" value="1"/>
            <enum name="reverse" value="2"/>
        </attr>
        <attr name="angle" format="enum">
            <enum name="cw_0" value="0"/>
            <enum name="cw_90" value="90"/>
            <enum name="cw_180" value="180"/>
            <enum name="cw_270" value="270"/>
        </attr>
        <attr name="dropoff" format="float"/>
        <attr name="fixed_width" format="dimension"/>
        <attr name="fixed_height" format="dimension"/>
        <attr name="intensity" format="float"/>
        <attr name="relative_width" format="float"/>
        <attr name="relative_height" format="float"/>
        <attr name="shape" format="enum">
            <enum name="linear" value="0"/>
            <enum name="radial" value="1"/>
        </attr>
        <attr name="tilt" format="float"/>
    </declare-styleable>

    <declare-styleable name="ScaleView">
        <attr name="scaleview_bg" format="reference"></attr>
    </declare-styleable>

    <declare-styleable name="TextViewWithFont">
        <attr name="oakFont" format="reference|string" />
    </declare-styleable>

    <declare-styleable name="StarRateBar">
        <attr name="totalStar" format="integer" />
        <attr name="starFull" format="integer" />
        <attr name="touchAble" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ToggleButton">
        <attr name="borderWidth" format="dimension">
        </attr>
        <attr name="offBorderColor" format="reference|color">
        </attr>
        <attr name="offColor" format="reference|color">
        </attr>
        <attr name="onColor" format="reference|color">
        </attr>
        <attr name="spotColor" format="reference|color">
        </attr>
        <attr name="animate" format="reference|boolean">
        </attr>
        <attr name="isDefaultOn" format="reference|boolean">
        </attr>
    </declare-styleable>
</resources>